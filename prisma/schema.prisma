datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
    provider = "cargo prisma"
    output = "../src/prisma.rs"
}

model User {
    id          String  @id
    displayName String
    test        String
    test2       String
    test3       String
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    published Boolean
    title     String
    content   String?
    desc      String?

    comments Comment[]
}

model Comment {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    content   String

    post   Post   @relation(fields: [postID], references: [id])
    postID String
}
